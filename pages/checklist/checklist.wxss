.wraper{
  display: flex;
  flex-direction: column;
}
 
.header{
  background-color: lightblue;
  flex: 0 0 14vh; 
  padding-left: 4.8vw;
  display: flex;
  align-items: center;
}
 
.main{
  flex: 1;
  position: relative;
}
 
.main-scroll{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
 
.main-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 4.8vw;
  margin-right: 4.8vw;
}
 
.footer{
  background-color: lightblue;
  flex: 0 0 10.6vh; 
  padding-left: 4.8vw;
  padding-right: 4.8vw;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.btn {
  padding: 0 4.3vw;
  font-family: PingFangSC;
  font-size: 16px;
  font-weight: 500;
  color: #1a3670;
}
