.wraper{
  display: flex;
  flex-direction: column;
}
 
.header{
  flex: 0 0 13vh; 
  padding-left: 4.8vw;
  display: flex;
  align-items: center;
}

.title {
  width: 100%;
  height: 4.5vh;
  font-family: CentraleSans;
  font-size: 20px;
  font-weight: bold;
  color: #212121;
}

.body{
  flex: 1;
  position: relative;
}

.main-scroll{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.main-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.module-box {
  width: 100%;
  height: 10vh;
  margin-left: 4.8vw;
  margin-right: 4.8vw;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.module-name {
  opacity: 0.8;
  font-family: CentraleSans;
  font-size: 16px;
  line-height: 1.38;
  color: #212121;
}

.module-nav {
  width: 5vw;
  height: 5vw;
  background: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: contain;
}

.line {
  width: 100%;
  height: 2rpx;
  background-color: #cdcdcd;
}

.line:last-child {
  height: 0;
}