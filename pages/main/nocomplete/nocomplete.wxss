.content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #f4f4f4;
}

.search-line {
  height: 72rpx;
  margin: 28rpx 26rpx 28rpx 28rpx;
  border: solid 2px #ededed;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
}

.search-input {
    width: 400rpx;
    height: 31px;
    margin: 10rpx 196rpx 0 42rpx;
    font-family: PingFangSC;
    font-size: 24pxpx;
    font-weight: normal;
    color: #9e9e9e;
}

.search-image {
    width: 50rpx;
    height: 50rpx;
    margin: 13rpx 18rpx 5rpx 0;
}

.item-content {
  overflow-y: auto;
  position: absolute;
  right: 0;
  left: 0;
  bottom: 100rpx;
  top: 128rpx;
}