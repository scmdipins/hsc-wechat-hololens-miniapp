.body {
  width: 100%;
  flex: 1;
  padding: 2vh 0;
  position: relative;
}

.main-scroll{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.hint {
  width: 100%;
  height: 4vh;
  display: flex;
  padding: 1vh 0;
  align-items: center;
  font-family: CentraleSans;
  font-size: 14px;
  color: rgba(33, 33, 33, 0.8);
}