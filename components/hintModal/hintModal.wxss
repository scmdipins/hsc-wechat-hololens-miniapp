.content-box {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.content-dialog {
  background: white;
  width: 75vw;
  height: 50vh;
  padding: 2vh 3.5vw;
  border-radius: 4rpx;
  display: flex;
  flex-direction: column;
  margin-top: 20vh;
}

.head {
  width: 100%;
  height: 5.3vh;
  display: flex;
  flex-direction: row;
  position: relative;
}

.title {
  font-family: CentraleSans;
  font-size: 14px;
  font-weight: 500;
  color: rgba(33, 33, 33, 0.8);
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.del-box {
  width: 30vw;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

