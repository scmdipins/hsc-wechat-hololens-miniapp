.fail-reason-box {
  margin-top: 1.5vh;
  width: 84.2vw;
  height: 11.61vh;
  margin-left: 4vw;
}

.fail-reason-content {
  border: 1px solid #c4c4c4;
  border-radius: 6rpx;
  height: 100%;
}

.areas{
  width: 100%;
  height: 100%;
  padding: 1.8vh 1.8vw;
  box-sizing: border-box;
  font-size: 16px;
  color: #212121;
  margin: 0 auto;
  overflow: hidden;   
  position: relative; 
}

.currentWordNumber{
  font-size: 10px;
  font-family: PingFangSC;
  position: absolute;
  right: 3vw;
  bottom: 1.5vh;
}

.camera-box {
  width: 82vw;
  margin-top: 1vh;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 0 auto;
}

.camera-panel {
  width: 38vw;
}

.camera-panel:not(:nth-child(2n)) {
  margin-right: 6vw;
}