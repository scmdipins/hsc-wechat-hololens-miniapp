.content-box {
  width: 90.4vw;
  margin-bottom: 1.33vh;
}

.content {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.name {
  display: flex;
  flex: 1;
  justify-content: flex-start;
  align-items: center; 
  min-height: 4.32vh;
  line-height: normal;
}

.status {
  display: flex;
  align-items: center;
  width: 25.6vw;
  height: 100%;
}

.select-box {
  width: 100%;
  height: 100%;
}

.select {
  font-size: 14px;
  font-family: CentraleSans;
  color: #212121;
  height: 4.32vh;
  line-height: 4.32vh;
  display: flex;
  flex-direction: row;
  position: relative;
}

.show-text {
  width: 72%;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 2.13vw;
  color: #383838;
}

.failed {
  color: #de3735;
}

.options {
  background: white;
  width: 25.6vw;
  position: absolute;
  box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.5);
  border-radius: 4rpx;
  z-index: 3;
  max-height: 120px;
  overflow: auto;
}

.option {
  height: 5vh;
  line-height: 5vh;
  border-top: 1px solid #e8e8e8;
  padding: 0 2.13vw;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 14px;
  color: #383838;
}

.icon {
  width: 28%;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

