.content-box {
  width: 38vw;
  position: relative;
}

.pic-panel {
  width: inherit;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 1.66vh 0;
}

.pic{
  width: inherit;
  height: 14.76vh;
  background-color: #e8e8e8;
  display: flex;
  justify-content: center;
  align-items: center;
}

.pic-img {
  width: 100%;
  height: 100%;
}

.camera {
  width: inherit;
  height: inherit;
  display: flex;
  justify-content: center;
  align-items: center;
}

.camera-img {
  width: 8.8vw;
  height: 5.14vh;
  background: url('data:image/png;base64,');
}
 
.detail {
  margin-top: 1vh;
  font-family: PingFangSC;
  font-size: 12px;
  color: #909090;
}

.delete {
  width: 10vw;
  height: 10vw;
  position: absolute;
  right: -2.935vw;
  top: 0;
}

.delete-img {
  width: 5.87vw;
  height: 5.87vw;
  position: absolute;
  top: 0;
  right: 0;
  background: url('data:image/png;base64,');
}