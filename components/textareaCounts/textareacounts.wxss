.content {
  border: 1px solid #c4c4c4;
  border-radius: 6rpx;
  height: 100%;
}

.areas{
  width: 100%;
  height: 100%;
  padding: 1.8vh 1.8vw;
  box-sizing: border-box;
  font-size: 16px;
  color: #212121;
  margin: 0 auto;
  overflow: hidden;   
  position: relative; 
}

.currentWordNumber{
  font-size: 10px;
  font-family: PingFangSC;
  position: absolute;
  right: 3vw;
  bottom: 1.5vh;
}
